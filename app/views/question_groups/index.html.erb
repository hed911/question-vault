<div class="container">
  <div class="row">
    <div class="col-sm-9">
      <h1>Question groups</h1>
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"></h3>
        </div>
        <div id="table-container" class="panel-body"></div>
      </div>
    </div>
    <div class="col-sm-3">
      <div class="text-center">
        <button id="new-group-button" type="button" class="btn btn-primary">New group</button>
        <hr>
      </div>

      <div class="row">
        <%= label_tag(:name_search, "Search by Name:", class: "form-radio-label") %>
        <%= text_field_tag :name_search, nil, class: "form-control bind-search" %>
      </div>

      <%= radio_button_list(
        list: @statuses, 
        title: "Status",
        field_name: 'status_search',
        checked_id: 'any')
      %>

      <%= radio_button_list(
        list: @sources, 
        title: "Source",
        field_name: 'source_search',
        checked_id: 'any')
      %>
    </div>
  </div>
</div>

<%= javascript_include_tag "custom/question_groups/index" %>