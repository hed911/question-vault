<nav aria-label="Page navigation">
  <ul class="pagination">
    <li class="page-item">
      <a data-page="1" class="page-link" href="#" aria-label="First">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <% (1..total).each do |i| %>
      <li class="page-item<%= ' active' if i == current_page %>"><a data-page="<%= i %>" class="page-link" href="#"><%= i %></a></li>
    <% end %>
    <li class="page-item">
      <a data-page="<%= @total_pages %>" class="page-link" href="#" aria-label="Last">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>